---
import Header from "@src/components/Header.astro";
import "../styles/global.css";
import Sidebar from "@src/components/Sidebar.astro";
import SidebarMenu from "@src/components/SidebarMenu.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="flex flex-col max-w-6xl px-10 mx-auto">
      <Header />
      <div class="flex flex-1">
        <SidebarMenu />
        <main class="flex-1 p-6 bg-white shadow-md rounded-md mx-4 my-6">
          <slot />
        </main>
      </div>
      <slot />              
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
