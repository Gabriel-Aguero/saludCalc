---
import Bienvenida from "@src/components/Bienvenida.astro";
import "../styles/global.css";
import Sidebar from "@src/components/Sidebar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="max-w-6xl px-10 mx-auto">
      <Bienvenida />
      <div class="flex gap-10">
        <Sidebar />
        <main class="">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
